<% include ../partials/header %> 
<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <h1 style="text-align: center;">Report <%= user.username %></h1>
            <form action="/users/<%= user._id %>/reports" method="post">
                <div class="form-group">
                    <input type="text" class="login-form" name="report[title]" placeholder="title">
                </div>
                <div class="form-group">
                    <input type="text" class="login-form" name="report[text]" placeholder="report">
                </div>
                <button class="btn btn-lg btn-danger btn-block">Report</button>
            </form>
            <a href="/main">Go back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %> 