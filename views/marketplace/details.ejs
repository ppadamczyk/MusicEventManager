<% include ../partials/header %>
<div class="container">
    <div class="row">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= offer.picture %>">
                <div class="caption-full">
                    <h4 class="pull-right"><%= offer.price %></h4>
                    <h4><a><%=offer.offer_name%></a></h4>
                    <p><%= offer.description %></p>
                    <p>
                        <em>Submitted By <%= offer.author.username %></em>
                    </p>
                        <a class="btn btn-primary" id="picked" href="/events/<%=event._id%>/marketplace"> Pick this offer</a>
                        <a class="btn btn-primary" href="/events/<%=event._id%>/marketplace"> Take me back</a>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $("#picked").on("click",function(){
        $.ajax({
            console.log("ajax send");
            method: "POST",
            url: "/events/pick",
            data: {
                event_id:event._id,
                offer:offer
            }
    }).done(function(msg) {
        console.log("ajax done");
        
    });
    }
</script>

