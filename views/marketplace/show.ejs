<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= offer.picture %>"/>
                <div class="caption-full">
                    <h4><a><%=offer.offer_name%></a></h4>
                    <h4 class="pull-right"><%= offer.price %></h4>
                    <p><%= offer.description %></p>
                    <p>
                        <em>Submitted By <%= offer.author.username %></em>
                    </p>
                    <% if(currentUser && offer.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" href="/marketplace/<%= offer._id %>/?_method=DELETE">Edit</a>
                        <form id="delete-form" action="/marketplace/<%= offer._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% }%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>