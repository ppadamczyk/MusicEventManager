<% include ../partials/header %> 
    <div class="container">
      <div class="row">
          <% offers.forEach(function(offer){ %>
                <div class="col-md-3 col-sm-6 p-1">
                    <div class="card m-5" style="width: 18rem; height: auto">
                       <img class="card-img-top" src="<%= offer.picture %>">
                       <div class="card-body">
                           <div class="card-title">
                           <%= offer.offer_name %>
                           </div>
                       </div>
                       <p>
                           <a href="/marketplace/<%= offer._id %>" class="btn btn-primary">More Info</a>
                       </p>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
<% include ../partials/footer %> 