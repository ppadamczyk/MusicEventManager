<% include ./partials/header %> 


<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <h1 style="text-align: center;">Sign Up!</h1>
            <form action="/register" method="post">
                <div class="form-group">
                    <input type="text" class="login-form" name="username" placeholder="username">
                </div>
                <div class="form-group">
                    <input type="password" class="login-form" name="password" placeholder="password">
                </div>
                <div class="form-group" >
                    <h4 style="text-align:center">Select your roles</h4>
                    <input type="checkbox" name="organizer" value="true"> Organizer<br>
                    <input type="checkbox" name="artist" value="true"> Artist<br>
                    <input type="checkbox" name="tech" value="true"> Tech<br>
                    <input type="checkbox" name="place_owner" value="true"> Place owner<br>
                    <input type="checkbox" name="gear_owner" value="true"> Gear owner<br>
                </div>
                <button class="btn btn-lg btn-primary btn-block">Sign Up</button>
            </form>
            <a href="/login">Go back</a>
        </div>
    </div>
</div>
<% include ./partials/footer %> 