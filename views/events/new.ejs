<% include ../partials/header %> 


<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <h1 style="text-align: center;">Create new event</h1>
            <form action="/events" method="post">
                <div class="form-group">
                    <input type="text" class="login-form" name="offer_name" placeholder="event name">
                </div>
                <div class="form-group">
                    <input type="text" class="login-form" name="description" placeholder="description">
                </div>
                <div class="form-group">
                    <input type="text" class="login-form" name="picture" placeholder="picture url">
                </div>
                <button class="btn btn-lg btn-primary btn-block">Find contractors!</button>
            </form>
            <a href="/main">Go back</a>
        </div>
    </div>
</div>
