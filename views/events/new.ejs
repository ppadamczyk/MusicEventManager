<% include ../partials/header %> 
<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <h1 style="text-align: center;">Create new event</h1>
            <form action="/events" method="post">
                <div class="form-group">
                    <input type="text" class="login-form" name="event[event_name]" placeholder="event name" required>
                </div>
                <div class="form-group">
                    <input type="date" class="login-form" name="event[event_date]" required>
                </div>
                <div class="form-group">
                    <input type="text" class="login-form" name="event[description]" placeholder="description" required>
                </div>
                <div class="form-group">
                    <input type="text" class="login-form" name="event[picture]" placeholder="picture url (leave blank for default picure)">
                </div>
                <button class="btn btn-lg btn-primary btn-block">Find contractors!</button>
            </form>
            <a href="/events/<%=event._id%>/manage">Go back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %> 