                            <div class="card-title">
                                <h4><%=task.title%></h4>
                            </div>
                            <div class="card-body">
                                <p><%=task.text%></p>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
             <div class="col-3">
                <div class="jumbotron">
                    <h2>Gear owners tasks</h2>
                    <a class="btn btn-primary" href="/events/<%=event._id%>/tasks/new">Add new task</a>
                    <% event.tasks.gear_owners.forEach(function(task){ %>
