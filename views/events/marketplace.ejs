<% include ../partials/header %> 
    <div class="container">
        <div class="row">
            <div class="col-3">
            <div class="jumbotron" id="artist_place">
                <button class="btn btn-primary btn-lg" role="button" id="artist">Find an artist</button>
            </div>
        </div>
        <div class="col-3">
            <div class="jumbotron" id="place_owner_place">
                <button class="btn btn-primary btn-lg" role="button" id="place_owner">Find a place</button>
            </div>
        </div>
        <div class="col-3">
            <div class="jumbotron" id="tech_place">
                <button class="btn btn-primary btn-lg" role="button" id="tech">Find a tech</button>
            </div>
        </div>
        <div class="col-3">
            <div class="jumbotron" id="gear_owner_place">
                <button class="btn btn-primary btn-lg" role="button" id="gear_owner">Find gear to rent</button>
            </div>
        </div>
        </div>
        <div class="row">
            <h1>You have chosen <%=event.contractors.artists.length%> artists</h1>
            <h1>You have chosen <%=event.contractors.techs.length%> technicians</h1>
            <h1>You have chosen <%=event.contractors.gear_owners.length%> places to rent gear</h1>
            <h1>You have chosen <%if(event.contractors.place_owner){ %>
                <%= event.contractors.place_owner.username%>
                <% } %> to be your place owner</h1>
        </div>
    </div>
<script>
    $("button").click(function(){
    console.log("asdasd");
    let id = $(this).attr("id");
   $.ajax({
        method: "POST",
        url: "/events/get",
        data: {
            id:id
        }
    })
    .done(function(msg) {
        console.log(msg);
        msg.foundOffers.forEach(function (offer){
            console.log(offer);
            $("#" + id + "_place").append("<div>"+"<div>" + offer.offer_name + "</div>"+ "<a>Show details</a>"+"</div>");
            $("#" + id + "_place div").addClass("card ");
            $("#" + id + "_place div a").addClass("btn btn-primary");
            $("#" + id + "_place div a").last().attr('href', '/marketplace/'+offer._id+'/details');

        });
    }); 
});
</script>
<% include ../partials/footer %> 