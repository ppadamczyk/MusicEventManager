<script>
    $("button").click(function(){
    console.log("asdasd");
    let id = $(this).attr("id");
   $.ajax({
        method: "POST",
        url: "/events/get",
        data: {
            id:id
        }
    })
    .done(function(msg) {
        console.log(msg);
        msg.foundOffers.forEach(function (offer){
            console.log(offer);
            $("#" + id + "_place").append("<li>" + offer.offer_name + "</li>");
        });
    }); 
});
</script>
