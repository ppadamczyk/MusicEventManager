<% include ../../partials/header %> 
<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <h1 style="text-align: center;">Edit <%= task.title %> task</h1>
            <form action="/events/<%= task.event %>/tasks/<%=task._id%>?_method=PUT" method="post">
                <div class="form-group">
                    <input type="text" class="login-form" name="newly[title]" value="<%=task.title%>">
                </div>
                <div class="form-group">
                    <input type="text" class="login-form" name="newly[text]" value="<%=task.text%>">
                </div>
                <button class="btn btn-lg btn-primary btn-block">Update task</button>
            </form>
            <a href="/events/<%=task.event.id%>/manage">Go back</a>
        </div>
    </div>
</div>
<% include ../../partials/footer %> 